<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">    
    <EditText
        android:inputType="number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/firstNumberEditText" />
    <EditText
        android:inputType="number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/secondNumberEditText" />
    
    <LinearLayout
        android:orientation="horizontal"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout1" 
        >
        <Button
            android:text="@string/add_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="25px"
            android:minHeight="25px"
            android:id="@+id/addButton"
            android:layout_weight="1" 
        />
        <Button
            android:text="@string/subtract_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="25px"
            android:minHeight="25px"
            android:id="@+id/subtractButton"
            android:layout_weight="1" 
        />
        <Button
            android:text="@string/multiply_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="25px"
            android:minHeight="25px"
            android:id="@+id/multiplyButton"
            android:layout_weight="1" 
        />
        <Button
            android:text="@string/divide_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="25px"
            android:minHeight="25px"
            android:id="@+id/divideButton"
            android:layout_weight="1" 
        />
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:id="@+id/linearLayout2" >
        <TextView
            android:text="Vastus"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:textSize="40dp"
            android:id="@+id/answerTextView"
            android:gravity="center"
            android:background="@color/colorPrimary"
            android:textColor="@color/colorPrimaryTextDark"
            style="GreenText"
        />
    </LinearLayout>
</LinearLayout>
